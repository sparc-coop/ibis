<figure class="room-icon room-icon-@RoomType">
    @switch (RoomType)
    {
        case "Chat":
            <img src="/icons/User-Voice__Outline.svg" alt="Chat" />
            break;
        case "Blog":
            <img src="/icons/Circle.svg" alt="Blog" />
            break;
        case "Content":
            <img src="/icons/Send-Arrow.svg" alt="Content" />
            break;
    }
    <figcaption>@RoomType</figcaption>
</figure>

@code {
    [Parameter] public string RoomType { get; set; } = null!;
}
