@page "/create-project"
@model IsisTranscriber.NETCore.Pages.CreateProjectModel
@{
}

<h1>Let’s create a new project!</h1>
<form id="form" name="form" action="/project" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label>Project name</label>
        <input type="text" id="name" name="name" />
    </div>
    <div class="form-group">
        <label>Project Type</label>
        <select id="type" name="type">
            <option value="Audio">Audio</option>
            <option value="Video">Video</option>
        </select>
    </div>
    <div class="buttons">
        <div @*class="upload-button"*@>
            <div class="label">Click me!</div>
            <input id="files" name="files" type="file" size="1" />
        </div>
    </div>
    <div class="form-group">
        <input type="button" class="btn btn-primary" value="Save Project" onclick="uploadFiles('files');" />
    </div>
</form>
<div id="progress" class="progress"><div id="bar" class="bar"></div><div id="label" class="label">0%</div></div>