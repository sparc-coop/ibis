@inherits BlazorToastBase
@using Microsoft.AspNetCore.Components.Web

<div class="blazor-toast @ToastSettings.BackgroundClass">
    @if (!string.IsNullOrWhiteSpace(ToastSettings.IconClass))
    {
        <div class="blazor-toast-icon">
            <i class="fa fa-@ToastSettings.IconClass" aria-hidden="true"></i>
        </div>
    }
    <div class="blazor-toast-body">
        <div class="blazor-toast-header">
            <h5>@ToastSettings.Heading</h5>
            <button @onclick=@Close>x</button>
        </div>

        <p>@ToastSettings.Message</p>
    </div>
</div>
