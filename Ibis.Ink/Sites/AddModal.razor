@inherits SparcModal

<div class="add-site-modal">
    @if (AddLink)
    {
        <AddLinkWithURL OnBack="HandleBack" />
    }
    else if (OpenDocument)
    {
        <OpenDocumentForIDE OnBack="HandleBack" />
    }
    else if (AddNewPage)
    {
        <AddUrlToRoom OnBack="HandleBack" />
    }
    else
    {
        <header>
            <div class="header-title-and-button">
                <h5>Add New Page to Ibis</h5>
                <button class="close-button" type="button" aria-label="Close" @onclick="Cancel">
                    <CloseIcon />
                </button>
            </div>
            <p class="medium">Porem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio.</p>
        </header>

        <div class="modal-content">
            <div class="open-document" @onclick=ShowOpenDocumentContent>
                <div class="header-title-with-icon">
                    <FileSettingIcon />
                    <h6>Open document for IDE</h6>
                </div>
                <div class="expand-div">
                    <RightArrowExpandIcon />
                </div>
            </div>

            <div class="add-new-page" @onclick=ShowAddNewPageContent>
                <div class="header-title-with-icon">
                    <FilePlusIcon />
                    <h6>Add new page</h6>
                </div>
                <div class="expand-div">
                    <RightArrowExpandIcon />
                </div>
            </div>

            <div class="link-with-url" @onclick=ShowAddLinkContent>
                <div class="header-title-with-icon">
                    <LinkAngledIcon />
                    <h6>Link with URL</h6>
                </div>
                <div class="expand-div">
                    <RightArrowExpandIcon />
                </div>
            </div>
        </div>
    }
</div>



@code {
    private bool AddLink = false;
    private bool OpenDocument = false;
    private bool AddNewPage = false;

    private void ShowAddLinkContent()
    {
        AddLink = true;
        OpenDocument = false;
        AddNewPage = false;
    }

    private void ShowOpenDocumentContent()
    {
        AddLink = false;
        OpenDocument = true;
        AddNewPage = false;
    }

    private void ShowAddNewPageContent()
    {
        AddLink = false;
        OpenDocument = false;
        AddNewPage = true;
    }

    private void HandleBack(bool isBack)
    {
        if (isBack)
        {
            AddLink = false;
            OpenDocument = false;
            AddNewPage = false;
        }
    }
}