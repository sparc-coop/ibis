<figure class="room-icon room-icon-@RoomType">
    @switch (RoomType)
    {
        case "Chat":
            <img src="/icons/User-Voice__Outline.svg" alt="Chat" title="Chat"/>
            break;
        case "Blog":
            <img src="/icons/Circle.svg" alt="Blog" title="Blog"/>
            break;
        case "Content":
            <img src="/icons/Send-Arrow.svg" alt="Content" title="Content"/>
            break;
    }
</figure>

@code {
    [Parameter] public string RoomType { get; set; } = null!;
}
