@inherits SparcModal

<div class="add-site-modal">
    <header>
        <h6>Add New Site to Ibis</h6>
        <p class="medium">Porem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit interdum, ac aliquet odio mattis.</p>
    </header>

    <div class="website-name-wrapper">
        <p class="medium">Site Name</p>
        <input type="text" class="website-name" placeholder="Site Name" />
    </div>

    <div class="website-link-wrapper">
        <p class="medium">Site Link</p>
        <input type="text" class="website-link" placeholder="Site Link" />
    </div>

    <div class="manual-input-wrapper">
        <input type="checkbox" class="manual-input" />
        <label>Manual Input</label>
    </div>

    <div class="close-add-btns">
        <button class="close-button" type="button" aria-label="Close" @onclick="Cancel">Close</button>
        <button class="add-button">Add</button>
    </div>
</div>


