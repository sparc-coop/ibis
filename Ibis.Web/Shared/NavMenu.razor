<div class="nav-menu">
    <a href="/"><img class="logo" src="/images/logo_2x.png" /></a>
    @*<a href="/pricing">Pricing</a>*@
    <AuthorizeView>
        <Authorized>
            <a href="rooms" class="nav-link">
                <img class="dash-icon" src="../icons/dashboard.svg"/>
            </a>
            <button class="logout" @onclick="BeginLogout">
                Log Out
            </button>
        </Authorized>
        <NotAuthorized>
            <a href="authentication/login" class="login">Get Started</a>
        </NotAuthorized>
    </AuthorizeView>
</div>

@inject SignOutSessionStateManager SignOutManager

@code {
    private async Task BeginLogout(MouseEventArgs args)
    {
        await SignOutManager.SetSignOutState();
        Nav.NavigateTo("authentication/logout");
    }
}