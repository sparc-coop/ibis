			<div class="settings-nav">
				<div class="nav-block">
					<a href="/profile">Profile</a>
				</div>
				<div class="nav-block">
					<a href="/password">Password</a>
				</div>
				<div class="nav-block">
					<a href="/team">Team</a>
				</div>
				<div class="nav-block">
					<a href="/billing">Billing</a>
				</div>
				<div class="nav-block">
					<a href="/notifications">Notifcations</a>
				</div>
				<div class="nav-block">
					<a href="/dialect">Dialect Profiles</a>
				</div>
			</div>
		</div>
