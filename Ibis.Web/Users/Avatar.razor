<figure class="avatar" style="background: @User.BackgroundColor">
    <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
        <circle cx="50" cy="50" r="45" fill="@User.ForegroundColor" />
        <text x="50%" y="52%" text-anchor="middle" dominant-baseline="middle">
            @Emoji
        </text>
    </svg>
    <figcaption style="color: @User.ForegroundColor">
        @User.Name
        <aside>
            @User.Language &#8226; @User.Pronouns
        </aside>
    </figcaption>
</figure>

@code {
    [Parameter] public UserAvatar User { get; set; } = null!;

    string Emoji => string.IsNullOrWhiteSpace(User.Emoji)
        ? User.Initials
        : string.IsNullOrWhiteSpace(User.SkinTone)
        ? User.Emoji
        : User.Emoji + User.SkinTone;
}

