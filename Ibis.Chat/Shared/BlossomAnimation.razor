<div class="blossom-animation" id="bl-anim-@Id" @ref=Element></div>

@inject IJSRuntime JS
@code {
    [Parameter] public string Source { get; set; } = null!;
    [Parameter] public string? AnimateOn { get; set; }

    string Id = Guid.NewGuid().ToString();
    ElementReference Element;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("window.animate", Element, Source, AnimateOn);
        }
    }
}
