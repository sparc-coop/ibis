        <div class="share-link-wrapper" @onclick="CopyLink">
            <input type="hidden" id="room-link" value="@("https://www.ibis.com/" + RoomId)" />
            <div>conversation.ibis.com/ratio-view-wing</div>
            <span>@CopyConfirm</span>
