@inherits Kuvio.Kernel.AspNet.Blazor.Modal.ModalBase
@using Microsoft.AspNetCore.Components.Web

<div class="blazor-modal-container @(IsVisible ? "blazor-modal-active" : string.Empty)">

    <div class="blazor-modal-overlay" @onclick="@(() => CloseModal(null))"></div>

    <div class="blazor-modal">
        <div class="blazor-modal-header">
            <h3 class="blazor-modal-title">@Title</h3>
            <button type="button" class="blazor-modal-close" @onclick="@(() => CloseModal(null))">
                <span>&times;</span>
            </button>
        </div>
        <div class="blazor-modal-content">
            <CascadingValue Value="@Parameters">
                @Content
            </CascadingValue>
        </div>
    </div>
</div>

