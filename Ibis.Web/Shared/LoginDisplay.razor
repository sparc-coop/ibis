<div class="login-display">
    <AuthorizeView>
        <Authorized>
            <button class="btn-secondary-invert btn-large logout" @onclick="BeginLogout">
                Log Out
            </button>
        </Authorized>
        <NotAuthorized>
            <a href="authentication/login" class="btn-secondary-invert btn-large login">Get Started</a>
        </NotAuthorized>
    </AuthorizeView>
</div>

@inject SignOutSessionStateManager SignOutManager
@code{
    private async Task BeginLogout(MouseEventArgs args)
    {
        await SignOutManager.SetSignOutState();
        Nav.NavigateTo("authentication/logout");
    }
}